{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "declaration": true,
    "outDir": "dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./index.ts", "./services/**/*.ts", "./types/**/*.ts", "./utils/**/*.ts", "./config.ts"],
  "exclude": ["dist", "tests", "docs"]
}





